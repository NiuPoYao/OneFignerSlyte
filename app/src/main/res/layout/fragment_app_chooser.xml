<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_chooser_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".AppChooserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/app_chooser_padding">

        <TableLayout
            android:id="@+id/app_chooser_audition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@color/colorWhiteTrans">

            <TableRow
                android:id="@+id/app_chooser_vacancies"
                android:layout_height="64dp"/>
            <TableRow
                android:id="@+id/app_chooser_candidates"
                android:layout_height="20dp"/>
        </TableLayout>

        <GridView
            android:id="@+id/app_chooser_grid_list"
            android:numColumns="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:minHeight="60dp"
            android:clickable="true"
            android:choiceMode="multipleChoice"
            />

    </LinearLayout>


</FrameLayout>
