<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_chooser_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".AppChooserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/app_chooser_padding">

        <GridLayout
            android:id="@+id/app_chooser_candidate"
            android:columnCount="5"
            android:rowCount="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:columnOrderPreserved="false"
            android:layout_margin="0dp"
            android:background="@color/colorWhiteTrans"
            >
        </GridLayout>

        <GridView
            android:id="@+id/app_chooser_grid_list"
            android:numColumns="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:minHeight="60dp"
            android:clickable="true"
            android:choiceMode="multipleChoice"
            android:background="@color/colorPrimary"
            />

    </LinearLayout>

    <include layout="@layout/element_fab"
        android:id="@+id/chooser_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"/>

</FrameLayout>
